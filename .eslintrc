{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["import"],
  "rules": {
    "linebreak-style": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": [0],
    "_comment-jsx-ally": "below temporary until eslint handles React Router's Link",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ]
  },
  "env": {
    "browser": true
  }
}
